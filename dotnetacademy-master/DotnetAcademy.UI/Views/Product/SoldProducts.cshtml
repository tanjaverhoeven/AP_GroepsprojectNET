@model IEnumerable<DotnetAcademy.Common.DTO.SoldProductViewModel>

@{
    ViewBag.Title = "Verkochte producten";
}

<h2>@ViewBag.Title</h2>

<table class="table table-striped table-bordered table-hover">
    <tr class="table-secondary">
        <th>
            @Html.Label("Product")
        </th>
        <th>
            @Html.Label("Aantal verkocht")
        </th>
    </tr>

    @if (Model != null) {
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.ActionLink(item.Product.Name, "Details", new {id = item.Product.Id})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalSold)
                </td>
            </tr>
        }
    }

</table>
﻿@model List<DotnetAcademy.Common.DTO.InvoiceViewModel>
<h2>Facturen van @ViewBag.Username</h2>
<br />
<br />
<table class="table table-striped table-bordered table-hover">
    <tr class="table-secondary">
        <th>
            @Html.Label("Code")
        </th>
        <th>
            @Html.Label("Datum")
        </th>
        <th>
            @Html.Label("acties")
        </th>
    </tr>
    @if (Model != null) {
        foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)
                </td>
                <td>
                    @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Date))
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Invoice", new { id = item.Id }, new { @class = "btn btn btn-primary" })
                </td>
            </tr>
        }
    }

</table>

<div>
    @Html.ActionLink("Terug naar profiel", "Index", null, new { @class = "btn btn btn-primary" })
</div>
